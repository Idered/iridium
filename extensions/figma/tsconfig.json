{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./out",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  }
}
