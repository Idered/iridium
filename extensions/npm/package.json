{
  "name": "npm",
  "version": "1.7.0",
  "main": "./out/extension.js",
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "webpack --mode production && yarn --cwd ../../ui/npm build",
    "build": "webpack --mode production",
    "dev": "tsc --build --watch",
    "pretest": "yarn run build && yarn run lint",
    "lint": "eslint . --ext ts"
  },
  "author": {
    "name": "Kasper Mikiewicz",
    "email": "iam@kasper.io",
    "url": "https://kasper.io"
  },
  "displayName": "NPM",
  "publisher": "idered",
  "description": "Manage npm dependencies from sidebar. Supports npm, yarn, pnpm, bun.",
  "icon": "resources/marketplace-icon.png",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#fff",
    "theme": "light"
  },
  "bugs": {
    "email": "support@kasper.io"
  },
  "keywords": [
    "npm",
    "yarn",
    "pnpm",
    "bun",
    "node modules",
    "node",
    "node dependencies",
    "iridium"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Idered/iridium"
  },
  "activationEvents": [
    "onView:iridium.npm",
    "onCommand:iridium.npm.addDependency"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iridium",
          "title": "Node Dependencies",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "iridium": [
        {
          "type": "webview",
          "id": "iridium.npm",
          "name": "Node Dependencies"
        }
      ]
    },
    "commands": [
      {
        "command": "iridium.npm.addDependency",
        "title": "Node Dependencies: Add dependency"
      }
    ],
    "configuration": {
      "title": "Iridium",
      "properties": {
        "iridium.npm.packageManager": {
          "type": "string",
          "enum": [
            "npm",
            "yarn",
            "pnpm",
            "bun"
          ],
          "default": "npm",
          "description": "The package manager used to install packages."
        },
        "iridium.npm.excludeVersions": {
          "type": "array",
          "items": {
            "type": "string",
            "examples": [
              "experimental",
              "nightly",
              "dev",
              "insiders",
              "canary",
              "next",
              "beta",
              "rc",
              "pre",
              "alpha"
            ]
          },
          "default": [],
          "description": "Versions containing these strings will be excluded from the list."
        },
        "iridium.npm.analyze.columns": {
          "type": "array",
          "items": {
            "type": "string",
            "examples": [
              "min",
              "gzip",
              "slow3G",
              "slow4G"
            ]
          },
          "default": [
            "gzip",
            "slow3G"
          ],
          "description": "Columns to show in the analyze view."
        },
        "iridium.npm.runAudit": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run security audit(yarn, pnpm)."
        },
        "iridium.npm.showShortcuts": {
          "type": "boolean",
          "default": true
        },
        "iridium.npm.showAlgoliaInfo": {
          "type": "boolean",
          "default": true
        },
        "iridium.npm.showSupportIcon": {
          "type": "boolean",
          "default": true
        },
        "iridium.npm.showResultDescription": {
          "type": "boolean",
          "default": true
        },
        "iridium.npm.maxNumberOfResults": {
          "description": "The maximum number of results to show in the search results.",
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 20
        }
      }
    }
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "axios": "1.1.0",
    "cross-spawn": "^7.0.3",
    "foundation": "link:../foundation/foundation",
    "jsonl-parse-stringify": "1.0.3",
    "reflect-metadata": "^0.1.13",
    "semver": "7.3.8",
    "ts-loader": "^8.0.14",
    "unimported": "^1.19.1",
    "uuid": "^8.3.2",
    "webpack": "^5.88.1",
    "webpack-cli": "^4.10.0"
  },
  "devDependencies": {
    "@babel/types": "7.19.4",
    "@types/cross-spawn": "^6.0.2",
    "@types/mocha": "^8.0.4",
    "@types/node": "^16.9.6",
    "@types/semver": "^7.3.12",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "mocha": "^8.1.3",
    "terser-webpack-plugin": "^5.1.1",
    "typescript": "^4.4.4",
    "vscode-test": "^1.4.1"
  }
}
