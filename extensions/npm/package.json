{
  "name": "npm",
  "version": "0.5.2",
  "main": "./out/extension.js",
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "webpack --mode production && yarn --cwd ../../ui/npm build",
    "build": "webpack --mode production",
    "dev": "tsc --build --watch",
    "pretest": "yarn run build && yarn run lint",
    "lint": "eslint . --ext ts"
  },
  "author": {
    "name": "Kasper Mikiewicz",
    "email": "iam@kasper.io",
    "url": "https://kasper.io"
  },
  "preview": true,
  "displayName": "Node Dependencies",
  "publisher": "idered",
  "description": "Node dependency manager.",
  "icon": "resources/marketplace-icon.png",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#fff",
    "theme": "light"
  },
  "bugs": {
    "email": "support@kasper.io"
  },
  "keywords": [
    "npm",
    "yarn",
    "pnpm",
    "node modules",
    "node",
    "node dependencies",
    "iridium"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Idered/iridium"
  },
  "activationEvents": [
    "onView:iridium.npm"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iridium",
          "title": "Node Dependencies",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "iridium": [
        {
          "type": "webview",
          "id": "iridium.npm",
          "name": "Node Dependencies"
        }
      ]
    },
    "configuration": {
      "title": "Iridium",
      "properties": {
        "iridium.npm.packageManager": {
          "type": "string",
          "enum": [
            "npm",
            "yarn",
            "pnpm"
          ],
          "default": "npm",
          "description": "The package manager used to install packages."
        },
        "iridium.npm.showAnalyzeTab": {
          "type": "boolean",
          "default": true
        },
        "iridium.npm.showProTab": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "cross-spawn": "^7.0.3",
    "foundation": "link:../foundation/foundation",
    "reflect-metadata": "^0.1.13",
    "ts-loader": "^8.0.14",
    "unimported": "^1.19.1",
    "uuid": "^8.3.2",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/mocha": "^8.0.4",
    "@types/node": "^16.9.6",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "mocha": "^8.1.3",
    "terser-webpack-plugin": "^5.1.1",
    "typescript": "^4.4.4",
    "vscode-test": "^1.4.1"
  }
}
