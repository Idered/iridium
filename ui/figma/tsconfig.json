{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "experimentalDecorators": true,
    "plugins": [{ "name": "@vuedx/typescript-vetur" }],
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"]
}
